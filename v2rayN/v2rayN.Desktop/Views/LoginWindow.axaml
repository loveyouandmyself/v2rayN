<Window
    x:Class="v2rayN.Desktop.Views.LoginWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:v2rayN.Desktop.ViewModels;assembly=v2rayN"
    Title="小鲤鱼-登录"
    Width="400"
    Height="250"
    MinWidth="350"
    MinHeight="200"
    WindowStartupLocation="CenterScreen"
    CanResize="False"
    x:DataType="vms:LoginViewModel"
    mc:Ignorable="d">
    <Window.Styles>
        <Style Selector="TextBlock.error">
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="Margin" Value="0,5,0,0" />
        </Style>
    </Window.Styles>
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <TextBlock
            Text="请输入授权码"
            FontSize="18"
            FontWeight="Bold"
            Margin="0,0,0,20"
            Grid.Row="0" />

        <StackPanel Grid.Row="1" Spacing="15">
            <TextBox
                Text="{Binding Key}"
                Watermark="授权码"
                IsEnabled="{Binding IsNotLoading}"
                KeyDown="KeyDown_OnKeyDown" />

            <TextBlock
                Text="{Binding ErrorMessage}"
                Classes="error"
                IsVisible="{Binding HasErrorMessage}" />

            <Button
                Content="登录"
                Command="{Binding LoginCmd}"
                IsEnabled="{Binding IsNotLoading}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center" />

            <TextBlock
                Text="登录中..."
                IsVisible="{Binding IsLoading}"
                HorizontalAlignment="Center"
                Foreground="Gray" />
        </StackPanel>
    </Grid>
</Window>

